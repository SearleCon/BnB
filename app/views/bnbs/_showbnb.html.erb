<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"  href="#collapseOne">
        Bnb Details
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse in">
      <div class="accordion-inner">
        <p>
          <b>Name:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :name, type: :input %>
        </p>

        <p>
          <b>Description:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :description, type: :input %>
        </p>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"  href="#collapseTwo">
        Contact Details
      </a>
    </div>
    <div id="collapseTwo" class="accordion-body collapse in">
      <div class="accordion-inner">
        <p>
          <b>Email:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :email, type: :input %>
        </p>

        <p>
          <b>Telephone number:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :telephone_number, type: :input %>
        </p>

        <p>
          <b>Website:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :website, type: :input %>
        </p>

        <p>
          <b>Twitter account:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :twitter_account , type: :input %>
        </p>

        <p>
          <b>Facebook page:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :facebook_page, type: :input %>
        </p>

        <p>
          <b>Contact person:</b>
          <%= best_in_place_if can?(:update, @bnb), @bnb, :contact_person, type: :input %>
        </p></div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" href="#collapseThree">
        Location
      </a>
    </div>
    <div id="collapseThree" class="accordion-body collapse in">
      <div class="accordion-inner">
        <div class="row">
          <div class="span4">
            <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@bnb.latitude}%2C#{@bnb.longitude}" %>
          </div>
          <div id="show_address" class="span4" align="right">
            <p>
              <b>Street:</b>
              <%= best_in_place_if can?(:update, @bnb), @bnb, :address_line_one, type: :input %>
            </p>

            <p>
              <b>Suburb:</b>
              <%= best_in_place_if can?(:update, @bnb), @bnb, :address_line_two, type: :input %>
            </p>

            <p>
              <b>City:</b>
              <%= best_in_place_if can?(:update, @bnb), @bnb, :city, type: :input %>
            </p>

            <p>
              <b>Postal code:</b>
              <%= best_in_place_if can?(:update, @bnb), @bnb, :postal_code, type: :input %>
            </p>
            <p>
              <b>Country:</b>
              <%= best_in_place_if can?(:update, @bnb), @bnb, :country, type: :input %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if user_signed_in? && current_user.role.description == "Guest" %>
    <div><%=link_to 'Book Now', new_bnb_booking_path(@bnb) %></div>
<% end %>

