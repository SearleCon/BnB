<div class="hero-unit clearfix">
<h2>Rooms</h2>

<div class="header form-search" align="right">
  <%= form_tag bnb_rooms_path(@bnb), :method => 'get', id: 'search_table_form' do %>
     <%= text_field_tag :search, params[:search], :class => "input-medium search-query", :placeholder => "Search rooms", :method => 'get' %>
      <% if params[:search]  %>
          <br>
          <label><%=link_to content_tag('i', '', class: 'icon-remove-sign icon-white').concat(" Show all"), bnb_rooms_path(@bnb) %></label>
      <% end %>
  <% end %>
</div>

<% cache @rooms do %>
<table class="table table-bordered  sortable" id="rooms" style="font-size: 15px">
  <thead>
    <th>Room Number</th>
    <th>Description</th>
    <th>En Suite</th>
    <th>Extras</th>
    <th>Rates</th>
    <th>Capacity</th>
    <th>Available</th>
    <th></th>
  </thead>
  <%= render  @rooms %>
</table>
<% end %>

<label><%= link_to content_tag('i', '', class: 'icon-plus-sign icon-white').concat(' Add room'), new_bnb_room_path(@bnb) %></label>

<br/>

<div class="span9" style="text-align: center;"><%= will_paginate @rooms  %></div>

<br>
<br>
<br>

<div class="help_info">
  Information: Please note to edit a room, click on the <i class='icon-edit icon-white'></i> button to proceed.
</div>

</div>
