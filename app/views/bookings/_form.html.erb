
<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">


     <%= f.input :guest_name, :input_html => { data: { autocomplete_source: guests_path} } %>


    <%= f.association :rooms, :label_method => :description, :value_method => :id, :as => :check_boxes, :item_wrapper_class => 'inline' %>


    <br>
         <div class="row-fluid">
             <%= f.simple_fields_for :event  do |event_form| %>
               <div class="span6">
                 <%= event_form.input :start_at, :as => :datepicker%>
               </div>
               <div class="span6">
                 <%= event_form.input :end_at,  :as => :datepicker%>
               </div>
             <% end %>
         </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
