<div class="hero-unit clearfix" style="text-align: center" ><%= gmaps4rails(@json) %></div>


<% @bnbs.each do |bnb| %>
    <div class="row" id="bnb_row">
      <div class="span3">
      <div class="thumbnail" align="center">
        <% if  bnb.photos.main_photo.any? %>
            <%= link_to(image_tag(bnb.photos.main_photo.first.image_url(:thumb)), show_bnb_path(bnb))%>
      <% else %>
            <%=link_to placeholdit_image_tag("240",text: "No photos uploaded!"),show_bnb_path(bnb) %>
        <% end %>
      </div>
      </div>
      <div class="span6">
        <h5><%= bnb.name %></h5>
        <p><%= bnb.description %></p>
        <p><%= link_to "More...", show_bnb_path(bnb) %></p>
      </div>
    </div>
<% end %>

<%= will_paginate @bnbs  %>

<%= link_to "Back",:back%>











