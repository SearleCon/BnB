
<%= simple_form_for Search.new, url: bnbs_path, id: "search_by_region",  html: {method: :get} do |f| %>
    <%=f.input :country, :collection => sort_countries_for_carmen(Carmen::Country.all),  prompt: "Select a country", input_html: {id: "bnb_country"}, label: false  %>
    <%= render 'shared/select_region',  :parent_region => f.object.country %>
    <%=f.input :city, :placeholder => 'Type your city here', label: false  %>
    <%= f.submit "Search",:class => "btn btn-primary" %>
<% end %>