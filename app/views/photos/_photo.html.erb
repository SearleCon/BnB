<div style="display: inline-block;">
  <ul class="thumbnails">
    <li id="<%=photo.id %>" class="span3">
      <% if photo.main? %>
          <a href="<%= photo.image_url %>"  class="thumbnail" rel="lazybox" style="border: solid; border-width: thick; border-color: blue;" >
            <%= image_tag photo.image_url(:thumb) %>
            <p><%= photo.description %></p>
          </a>
      <% else %>
          <a href="<%= photo.image_url %>"  class="thumbnail" rel="lazybox">
            <%= image_tag photo.image_url(:thumb) %>
            <p><%= photo.description %></p>
          </a>
      <% end %>


      <%= link_to 'Edit', edit_bnb_photo_path(@bnb,photo) if can? :edit, photo %>
      <%= link_to 'Remove', bnb_photo_path(@bnb, photo),:class => "delete_photo", method: :delete, remote: true if can? :destroy, photo  %>

    </li>
  </ul>
</div>


