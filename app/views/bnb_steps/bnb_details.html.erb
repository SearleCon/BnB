<div class="hero-unit">
    <h2>Please fill in details for your Bed and Breakfast</h2>

    <%= render :layout => 'form' do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :rating, :collection => 1..5,  :as => :radio_buttons, :item_wrapper_class => 'inline' %>

          <div id='rates'>
           <%= f.simple_fields_for :rates, :html => { :class => 'form-horizontal' } do |rate| %>
            <%= render 'rate_fields', :f => rate %>

          <% end %>
            <div class="links"><%= link_to_add_association content_tag('i', '', class: 'icon-plus-sign icon-white').concat(" Add Rate"), f, :rates%></div>

          </div>
        </div>
        <br>
      <%= f.button :submit, :value => 'Continue', :id => 'commit', class: "btn btn-primary" %>
    <% end %>
</div>