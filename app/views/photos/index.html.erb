<h2>Your images</h2>
<div class="gallery">
  <% if @photos.count >= 1 %>
      <div id="loading" align="center">
        <p>Please wait while the images are loading....</p>
        <div class="progress progress-striped active" id="progress">
          <div class="bar" style="width: 0%;"></div>
        </div>
      </div>
      <%= render @photos %>
  <% else %>
      <p class='center'>There are currently no images for your gallery</p>
  <% end %>
</div>

<% if can? :create, Photo %>       
 <%= link_to "Upload an image", new_bnb_photo_path(@bnb) %>
<% end %>
<br>
<br>
<div class="help_info">
  <ul>
    <li>
      <%= simple_format("<h5>Main photo:</h5> The photo designated as main will be highlighted with a red border.") %>
    </li>
    <li>
      <%= simple_format("<h5>Click to enlarge:</h5> Clicking on an image will open a popup with the full size version.") %>
    </li>
    <li>
      <%= simple_format("<h5>Remove:</h5> Click on remove to delete the image.") %>
    </li>
  </ul>
</div>


