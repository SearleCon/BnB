<div class="hero-unit">
  <h2>Please fill in your address and contact details for your Bed and Breakfast</h2>
<%= render :layout => 'form' do |f| %>
        <div class = 'form-inputs'>
          <p>BnB Address Details:</p>
          <%= f.input :address_line_one %>
          <%= f.input :address_line_two %>
          <%= f.input :city %>
          <%= f.input :postal_code %>
          <%= f.input :country, :collection => sort_countries_for_carmen(Carmen::Country.all),  prompt: "Select a country" %>

          <p>BnB Contact Details: (Defaults to user logged in)</p>
          <%= f.input :contact_person, value: "#{current_user.name} #{current_user.surname}"  %>
          <%= f.input :email, value: current_user.email %>
          <%= f.input :telephone_number %>
        </div>
      <%= f.button :submit, :value => 'Continue', :id => 'commit', class: "btn btn-primary" %>
<% end %>
</div>
