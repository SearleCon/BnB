<% if @photo.errors.any? %>
$('#photoform').html('<%= escape_javascript(render :partial => 'photos/form')%>');
<% else %>
$('#photoform').html('<%= escape_javascript(render :partial => 'upload_form')%>');
$('#browse_files').click(function() {
    return $('.image_file').click();
});
$('.image_file').bind('change', function() {
   $('#filepath').val($('.image_file').val().split('/').pop().split('\\').pop());
   contentType = $('input:file').prop('files')[0].type.toString();
   $('#mime_field').val(contentType);
});
<% end %>


