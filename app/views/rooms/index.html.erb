<h1>Listing rooms</h1>

<table class="table table-striped">
  <tr>
    <th>Room Number</th>
    <th>Description</th>
    <th>En Suite</th>
    <th>Extras</th>
    <th>Rates</th>
  </tr>

<% @rooms.each do |room| %>
  <tr class="center">
    <td><%= room.room_number  %></td>
    <td><%= room.description %></td>
    <td><%= room.en_suite %></td>
    <td><%= room.extras %></td>
    <td><%= number_to_currency(room.rates) %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

