$('#flash').html('<%= escape_javascript(render :partial => 'shared/flash_messages')%>');
<% if @guest.persisted? %>
$('#guests').append("<%= escape_javascript(render(:partial => 'guests/row', :locals =>  { :guest => @guest })) %>");
