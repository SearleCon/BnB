<h1>Listing rooms</h1>

<table class="table table-striped">
  <tr>
    <th>Room Number</th>
    <th>Description</th>
    <th>En Suite</th>
    <th>Extras</th>
    <th>Rates</th>
    <th>Remove</th>
  </tr>

<% @rooms.each do |room| %>
  <tr class="center">
    <td><%= best_in_place room, :room_number, :type => :input %></td>
    <td><%= best_in_place room, :description, :type => :input %></td>
    <td><%= best_in_place room, :en_suite, :type => :checkbox  %></td>
    <td><%= best_in_place room, :extras, :type => :input %></td>
    <td><%= best_in_place room, :rates, :display_with => :number_to_currency %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

