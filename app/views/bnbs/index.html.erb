<div class="hero-unit clearfix"><%= gmaps4rails(@json) %></div>

<% @bnbs.each do |bnb| %>
    <div class="row" id="bnb_row">
      <div class="span3">
      <div class="thumbnail">
        <% if bnb.photos.nil? || bnb.photos.empty? %>
            <%= placeholdit_image_tag "150", text: "No photos uploaded!" %>
        <% else %>
            <%= image_tag @bnb.photos.find_main_photo.image_url(:thumb) %>
        <% end %>
      </div>
      </div>
      <div class="span6">
        <h5><%= bnb.name %></h5>
        <p>Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.</p>
        <p><%= link_to "More...", show_bnb_path(bnb) %></p>
      </div>
    </div>
<% end %>

<%= will_paginate @bnbs  %>

<%= link_to "Back",:back%>











