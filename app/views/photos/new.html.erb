<h2>Add new image</h2>
<div>
  <%= simple_form_for @photo, :url => bnb_photos_path(Bnb.first), :html => { :multipart => true}  do |f| %>
      <%= f.error_notification %>
      <%= image_tag(@photo.image_url) if @photo.image? %>
      <%= f.input :description, input_html: { maxlength: 20, size: 20 }, as: :text %>
      <div style="display:none;"><%= f.file_field :image %></div>
      <%= f.input :filepath, readonly: true,  :wrapper => :append do %>
          <%= f.input_field :filepath, readonly: true %><%= button_tag 'Browse', type: 'button', class: 'btn btn-mini', id: 'browse_files' %>
      <% end %>

      <%= f.submit "Save",:class => "btn btn-primary"%>
  <% end %>
</div>