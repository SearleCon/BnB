<%= simple_form_for @event,  :remote => true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :start_at,:as => :datepicker  %>
    <%= f.input :end_at, :as => :datepicker %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :id => 'addEvent' %>
  </div>
<% end %>
