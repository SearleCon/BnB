<h1>Listing rooms</h1>

<table class="table table-striped" id="rooms">
  <tr id='headers'>
    <th>Room Number</th>
    <th>Description</th>
    <th>En Suite</th>
    <th>Extras</th>
    <th>Rates</th>
    <th>Capacity</th>
    <th>Available</th>
  </tr>
  <%= render :partial => 'row', :collection => @rooms, :as => :room %>
</table>

<br/>

<label><%= link_to content_tag('i', '', class: 'icon-plus-sign'), bnb_rooms_path(@bnb, @bnb.rooms.build), method: :post, remote: true %> Add room</label>
