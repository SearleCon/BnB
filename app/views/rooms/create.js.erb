$('#flash').html('<%= escape_javascript(render :partial => 'shared/flash_messages')%>');
<% if @room.persisted? %>
    $('#rooms').append("<%= escape_javascript(render(:partial => 'rooms/row', :locals =>  { :room => @room })) %>");
    $("[rel=tooltip]").tooltip({animation:true, placement:'right'});
    $("#<%=@room.id%>").hide().fadeIn(500);
<% end %>
