<div class="hero-unit">
<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.input :role_id, collection: Role.all, as: :radio_buttons, :label_method => :description, :value_method => :id, :item_wrapper_class => 'inline'  %>
    <%= f.input :terms_of_service, as: :boolean, :inline_label => "I accept and agree to the terms of service."  %>
    <br>

  </div>

    <%= f.button :submit, "Sign up" %>

<% end %>

<%= render "devise/shared/links" %>
</div>
