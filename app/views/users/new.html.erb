<%= provide(:title, 'Sign up') %>
<h1>Sign up</h1>


<%= simple_form_for @user, :validate => true  do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.submit "Create my account", :class => "btn btn-large btn-primary" %>
<% end %>
